<div class="m-5 p-6 w-4/5 mx-auto bg-white rounded-xl shadow-lg flex flex-col justify-between"
     data-controller="summary">

  <h2><%= start_time %></h2>
  <div class="flex flex-row justify-between">
    <div class="flex flex-col m-3">
      <p class="text-6xl content-center text-center"><%= total_distance %></p>
      <p class="text-sm content-center text-center">MILES</p>
    </div>
    <div class="flex flex-col content-end w-96">
      <p class="text-4xl text-right">
      <%= total_time %>
      </p>
      <p class="text-2xl text-right">
      <span class="text-4xl"><%= speed %></span> mph
      </p>
    </div>

    <div class="flex flex-col justify-self-end">
      <input data-summary-target="id" type="hidden" value="<%= @run_summary.id %>">
      <button data-action="click->summary#delete_summary"
              class="btn-primary">
              Delete
      </button>
      <button data-action="click->summary#duplicate_summary"
              class="btn-primary">
              Duplicate
      </button>
    </div>
  </div>
</div>
