<div class="mx-auto mt-10">
  <h1 class="text-2xl">Create a new run summary</h1>
  <%= form_with model: @run_summary, url: run_summaries_path, class: "flex flex-col" do |f| %>
    <%= f.label :start_time, 'start time' %>
    <%= f.datetime_local_field :start_time %>
    <%= f.label :total_distance, 'miles' %>
    <%= f.number_field :total_distance, step: 0.01 %>
    <%= f.label :total_time, 'seconds' %>
    <%= f.number_field :total_time, class: "mb-10" %>
    <%= f.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
